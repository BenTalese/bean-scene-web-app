@model BeanScene.Data.Booking

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="page-section cta">
    <div class="container">
        <div class="row">
            <div class="col-xl-9 mx-auto">
                <div class="cta-inner bg-faded text-center rounded">
                    <h2 class="section-heading mb-5">
                        <span class="section-heading-upper">BeanScene Bookings</span>
                        <span class="section-heading-lower">View Booking Details</span>
                    </h2>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            Day/Date:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.WordDate)
                        </dd>
                        <dt class="col-sm-2">
                            Sitting:
                        </dt>
                        <dd class="col-sm-10">
                            @Model.Service.Sitting.MealType
                        </dd>
                        <dt class="col-sm-2">
                            Time:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ShortTime)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Duration):
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Duration) minutes.
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Guests):
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Guests) guests.
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Notes):
                        </dt>
                        @if (Model.Notes == null)
                        {
                            <dd class="col-sm-10">
                                None.
                            </dd>
                        }
                        else
                        {
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Notes):
                            </dd>
                        }
                        @*<dd class="col-sm-10">
            @Html.DisplayFor(model => model.Notes)
        </dd>*@
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Status):
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Status).
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Table):
                        </dt>
                        @if (Model.Table == null)
                        {
                            <dd class="col-sm-10">
                                Not yet allocated.
                            </dd>
                        }
                        else
                        {
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Table)
                            </dd>
                        }
                        @*<dd class="col-sm-10">
            @Html.DisplayFor(model => model.Table)
        </dd>*@
                    </dl>
                    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</section>