@model IEnumerable<BeanScene.Data.Sitting>

@{
    ViewData["Title"] = "Manage Sittings";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Manage Sittings</h1>
    <p></p>
    <p>
        <a class="btn btn-primary btn-lg" asp-action="Create">Create New</a>
    </p>
    <div class="table-section">
        <div class="header-manager p-2">
            <h4 class="ms-1 text-white">Sittings</h4>
        </div>
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.ActionLink("Day Of Week", "Manage", new { sortOrder = ViewBag.DaySortParm })
                    </th>
                    <th>
                        @Html.ActionLink("Sitting Type", "Manage", new { sortOrder = ViewBag.TypeSortParm })
                    </th>
                    @*<th>
                            Day Of Week
                        </th>
                        <th>
                            Sitting Type
                        </th>*@
                    <th>
                        Start Time
                    </th>
                    <th>
                        End Time
                    </th>
                    <th>
                        @Html.ActionLink("Sitting Status", "Manage", new { sortOrder = ViewBag.StatusSortParm })
                    </th>
                    <th>Manage Sittings</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DayOfWeek)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MealType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ShortStart)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ShortEnd)
                        </td>
                        @if (item.IsActive)
                        {
                            <td class="text-primary">
                                Active
                            </td>
                        }
                        else
                        {
                            <td class="text-warning">
                                Disabled
                            </td>
                        }
                        <td>
                            <a class="btn btn-success btn-sm" asp-action="Edit" asp-route-id="@item.Id">Update</a> |
                            <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>