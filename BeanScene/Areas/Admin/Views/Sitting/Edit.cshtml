@model BeanScene.Data.Sitting
@using BeanScene.Data

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Update</h1>

    <h4>Sitting "@Html.DisplayFor(model => model.DayOfWeek) @Html.DisplayFor(model => model.MealType)"</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="DayOfWeek" class="control-label"></label>
                    <select asp-for="DayOfWeek" class="form-control">
                        <option value="">-- Select Day Of Week --</option>
                        @foreach (BeanScene.Data.DayOfWeek day in Enum.GetValues(typeof(BeanScene.Data.DayOfWeek)))
                        {
                            <option value="@day.ToString()">@day.ToString()</option>
                        }
                    </select>
                    <span asp-validation-for="DayOfWeek" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MealType" class="control-label"></label>
                    <select asp-for="MealType" class="form-control">
                        <option value="">-- Select Meal Type --</option>
                        @foreach (MealType type in Enum.GetValues(typeof(MealType)))
                        {
                            <option value="@type.ToString()">@type.ToString()</option>
                        }
                    </select>
                    <span asp-validation-for="MealType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StartTime" class="control-label"></label>
                    <input asp-for="StartTime" class="form-control" />
                    <span asp-validation-for="StartTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EndTime" class="control-label"></label>
                    <input asp-for="EndTime" class="form-control" />
                    <span asp-validation-for="EndTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IsActive" class="control-label"></label>
                    <select asp-for="IsActive" class="form-control">
                        <option value="">-- Select Sitting Status --</option>
                        <option value="true">Active</option>
                        <option value="false">Disable</option>
                    </select>
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <p> </p>
                    <input type="submit" value="Save" class="btn btn-success" /> |
                    <a asp-action="Manage" class="btn btn-primary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
