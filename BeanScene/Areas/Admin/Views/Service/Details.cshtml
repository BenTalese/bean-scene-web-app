@model BeanScene.Data.Service

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Details</h1>

    <div>
        <h4>Service "@Html.DisplayFor(modelItem => Model.MealType) - @Html.DisplayFor(modelItem => Model.WordDate)"</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Day & Date
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.WordDate)
            </dd>
            <dt class="col-sm-2">
                Sitting Type
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MealType)
            </dd>
            <dt class="col-sm-2">
                Start Time
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => Model.Sitting.ShortStart)
            </dd>
            <dt class="col-sm-2">
                End Time
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => Model.Sitting.ShortEnd)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.State)
            </dt>
            @if (Model.State == BeanScene.Data.ServiceState.Open)
            {
                <dd class="col-sm-10 text-success">
                    Open
                </dd>
            }
            else
            {
                <dd class="col-sm-10 text-danger">
                    Closed
                </dd>
            }
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MaxCapacity)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MaxCapacity)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MaxPax)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MaxPax)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CurrentPax)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CurrentPax)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Vacancies)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Vacancies)
            </dd>
            <dt class="col-sm-2">
                Pending
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UnassignedPax)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" class="btn btn-success" asp-route-id="@Model.Id">Edit</a> |
        <a asp-action="Manage" class="btn btn-primary">Back to List</a>
    </div>
</div>
