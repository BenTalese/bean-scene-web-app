@model BeanScene.Data.Service

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Delete</h1>

    <h4>Service "@Html.DisplayFor(model => model.MealType) - @Html.DisplayFor(model => model.WordDate)"</h4>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Day & Date
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.WordDate)
            </dd>
            <dt class="col-sm-2">
                Sitting Type
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MealType)
            </dd>
            <dt class="col-sm-2">
                Start Time
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => Model.Sitting.ShortStart)
            </dd>
            <dt class="col-sm-2">
                End Time
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => Model.Sitting.ShortEnd)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.State)
            </dt>
            @if (Model.State == BeanScene.Data.ServiceState.Open)
            {
                <dd class="col-sm-10 text-success">
                    Open
                </dd>
            }
            else
            {
                <dd class="col-sm-10 text-danger">
                    Closed
                </dd>
            }
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MaxCapacity)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MaxCapacity)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MaxPax)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MaxPax)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CurrentPax)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CurrentPax)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Vacancies)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Vacancies)
            </dd>
            <dt class="col-sm-2">
                Pending
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UnassignedPax)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <p> </p>
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Manage" class="btn btn-primary">Back to List</a>
        </form>
    </div>
</div>
