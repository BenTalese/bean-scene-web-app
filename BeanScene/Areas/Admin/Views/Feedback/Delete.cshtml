@model BeanScene.Data.Feedback

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Delete</h1>

    <h4>Are you sure you want to delete this feedback?</h4>
    <div>

        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Reason):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Reason)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title):
            </dt>
            @if (Model.Title == null)
            {
                <dd class="col-sm-10">
                    No Title.
                </dd>
            }
            else
            {
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Title)
                </dd>
            }
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Comments):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Comments)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Rating):
            </dt>
            @if (Model.Rating == 5)
            {
                <dd class="col-sm-10 text-success">
                    @Html.DisplayFor(model => model.Rating)/5
                </dd>
            }
            else if (Model.Rating == 4)
            {
                <dd class="col-sm-10 text-warning">
                    @Html.DisplayFor(model => model.Rating)/5
                </dd>
            }
            else
            {
                <dd class="col-sm-10 text-danger">
                    @Html.DisplayFor(model => model.Rating)/5
                </dd>
            }
            <dt class="col-sm-2">
                Follow Up:
            </dt>
            @if (Model.FollowUpRequested)
            {
                <dd class="col-sm-10 text-danger">
                    Requested
                </dd>
            }
            else
            {
                <dd class="col-sm-10">
                    Not Required
                </dd>
            }
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name):
            </dt>
            @if (Model.Name == null)
            {
                <dd class="col-sm-10">
                    N/A.
                </dd>
            }
            else
            {
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
            }
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Phone):
            </dt>
            @if (Model.Phone == null)
            {
                <dd class="col-sm-10">
                    N/A.
                </dd>
            }
            else
            {
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Phone)
                </dd>
            }
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email):
            </dt>
            @if (Model.Email == null)
            {
                <dd class="col-sm-10">
                    N/A.
                </dd>
            }
            else
            {
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </dd>
            }
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Manage" class="btn btn-primary">Back to List</a>
        </form>
    </div>
</div>
