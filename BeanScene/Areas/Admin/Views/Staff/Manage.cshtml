@model BeanScene.Areas.Admin.Models.Staff.Manage

@{
    ViewData["Title"] = "Manage Staff";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Manage Staff</h1>
    <p></p>
    <a class="btn btn-primary btn-lg" asp-action="Create">Create New</a>
    <div class="table-section">
        <div class="header-manager p-2">
            <h4 class="ms-1 text-white">Managers</h4>
        </div>
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th>Role</th>
                    <th>Manage Managers</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model.Managers)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => m.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => m.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => m.PhoneNumber)
                        </td>
                        <td>
                            Manager
                        </td>
                        <td>
                            <a class="btn btn-success btn-sm" asp-action="Edit" asp-route-id="@m.Id">Update</a> |
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@m.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="table-section">
        <div class="header-staff p-2">
            <h4 class="ms-1 text-white">Employees</h4>
        </div>
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th>Role</th>
                    <th>Manage Employees</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var s in Model.Staff)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => s.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => s.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => s.PhoneNumber)
                        </td>
                        <td>
                            Employee
                        </td>
                        <td>
                            <a class="btn btn-success btn-sm" asp-action="Edit" asp-route-id="@s.Id">Update</a> |
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@s.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
