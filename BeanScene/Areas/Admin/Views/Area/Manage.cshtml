@model IEnumerable<BeanScene.Data.Area>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Manage Seating Areas</h1>
    <p></p>
    <p>
        <a class="btn btn-primary btn-lg" asp-action="CreateArea">Create New</a>
    </p>
    <div class="table-section">
        <div class="header-manager p-2">
            <h4 class="ms-1 text-white">Seating Areas</h4>
        </div>
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TableCapacity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SeatCapacity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StringTables)
                    </th>
                    <th>Manage Seating Areas</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TableCapacity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SeatCapacity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StringTables)
                        </td>
                        <td>
                            <a class="btn btn-success btn-sm" asp-action="Edit" asp-route-id="@item.Id">Update</a> |
                            <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    </div>