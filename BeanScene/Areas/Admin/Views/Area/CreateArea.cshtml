@model BeanScene.Areas.Admin.Models.AreaModels.AreaTable

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h3>Create New Seating Area</h3>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="CreateArea">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Area Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <p> </p>
                    <input type="submit" value="Create" class="btn btn-success" /> |
                    <a asp-action="Manage" class="btn btn-primary">Back to List</a><p> </p>
                </div>
            </form>
        </div>
    </div>
</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
